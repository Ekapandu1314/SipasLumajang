<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/frame"
    android:fillViewport="true"
    android:background="@color/colorSplashBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Tanggal-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/colorYellow"
            android:id="@+id/tgl_wanitakmr"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="@dimen/frame"
            android:layout_marginTop="@dimen/frame"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/colorYellow"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>


    <!--Wanita-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@color/colorSplashBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/wanita"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:id="@+id/textView10"
                android:textColor="@color/colorYellow"
                android:padding="@dimen/frame"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/frame">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/kamar"
                    android:id="@+id/textView14"
                    android:textColor="@color/colorYellow"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/isi"
                    android:id="@+id/textView15"
                    android:textColor="@color/colorYellow"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/colorYellow"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/list_lihatwanita" />

            <Button
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Lock Kamar Wanita"
                android:id="@+id/lock_kmr_lihatwanita"
                android:background="@drawable/rounded_button"
                android:onClick="lockData_Kamar_perempuan"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <!--Bukan Wanita-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorSplashBackground">

        <!--Blok A-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/blok_a"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/frame"
            android:textColor="@color/colorYellow"
            android:id="@+id/textView3" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="@dimen/frame">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/kamar"
                android:id="@+id/textView12"
                android:textColor="@color/colorYellow"
                android:layout_marginLeft="20dp"
                android:layout_gravity="start"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/isi"
                android:id="@+id/textView13"
                android:textColor="@color/colorYellow"
                android:layout_marginRight="20dp"
                android:layout_gravity="end|center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/colorYellow"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:id="@+id/list_blok1_wanita" />

        <!--Blok B-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/blok_b"
            android:id="@+id/textView9"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorYellow"
            android:padding="@dimen/frame"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/frame">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/kamar"
                android:id="@+id/textView24"
                android:textColor="@color/colorYellow"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/isi"
                android:id="@+id/textView25"
                android:textColor="@color/colorYellow"
                android:layout_marginRight="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/colorYellow"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="421dp"
            android:id="@+id/list_blok2_wanita" />

        <Button
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Lock Kamar Laki-laki"
            android:id="@+id/lock_kmr_l_wanita"
            android:background="@drawable/rounded_button"
            android:onClick="lockData_Kamar_laki"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!--Kamar Sel-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorSplashBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/sel"
            android:id="@+id/textView11"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorYellow"
            android:padding="@dimen/frame"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/frame">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/kamar"
                android:id="@+id/textView17"
                android:textColor="@color/colorYellow"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/isi"
                android:id="@+id/textView16"
                android:textColor="@color/colorYellow"
                android:layout_marginRight="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/colorYellow"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/list_sel_wanita" />
        <Button
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Lock Kamar Sel"
            android:id="@+id/lock_kmr_s_wanita"
            android:background="@drawable/rounded_button"
            android:onClick="lockData_Kamar_sel"
            android:layout_gravity="center"/>

    </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/colorYellow"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorSplashBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/ver_kamarWanita"
                android:textColor="@color/colorYellow"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/activity_vertical_margin"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:text="@string/copyright"
            android:gravity="center"
            android:background="@color/colorYellow"
            android:textColor="@color/colorBackground"
            android:textSize="12sp"
            android:layout_margin="@dimen/frame"
            />
    </LinearLayout>

    </ScrollView>